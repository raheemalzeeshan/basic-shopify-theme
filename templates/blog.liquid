<h1>{{ blog.title }}</h1>

{% paginate blog.articles by 4 %}
{% for article in blog.articles %}
<div class="blog-wrapper">
    <h2>{{ article.title | link_to: article.url}}</h2>
    <p>{{ article.author }}</p>
    <div>
        {{ article.excerpt }}
    </div>
</div>
{% endfor %}

{{ paginate | default_pagination }}
{% endpaginate %}